<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/fondo">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="24dp">

		<TextView
			android:id="@+id/tvTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/register_maestro_title"
			android:textSize="24sp"
			android:textStyle="bold"
			android:layout_marginBottom="24dp"
			android:textColor="@color/error"
			android:gravity="center"/>

		<ImageView
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_gravity="center"
			android:src="@drawable/maestro2"
			android:contentDescription="@string/app_name"
			android:layout_marginBottom="24dp" />


		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="16dp"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

			<EditText
				android:id="@+id/etNombre"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="48dp"
				android:hint="@string/register_nombre"
				android:inputType="textPersonName"
				android:autofillHints="name" />

		</com.google.android.material.textfield.TextInputLayout>

		<com.google.android.material.textfield.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="16dp"
			style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
			android:enabled="false">

			<EditText
				android:id="@+id/tvEmail"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="48dp"
				android:hint="@string/register_email"
				android:enabled="false"
				android:inputType="textEmailAddress"
				android:autofillHints="email"
				android:textColor="@color/text_primary"
				android:textColorHint="@color/text_secondary" />

		</com.google.android.material.textfield.TextInputLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/register_area"
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="@color/text_primary"
			android:layout_marginBottom="8dp" />

		<Spinner
			android:id="@+id/spinnerCarrera"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:layout_marginBottom="24dp" />

		<TextView
			android:id="@+id/tvMateriasTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/register_materias_impartir"
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="@color/text_primary"
			android:layout_marginBottom="8dp"
			android:visibility="gone" />

		<TextView
			android:id="@+id/tvMateriasHint"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Selecciona las materias que puedes impartir:"
			android:textSize="14sp"
			android:textColor="@color/text_secondary"
			android:layout_marginBottom="12dp"
			android:visibility="gone" />

		<LinearLayout
			android:id="@+id/llMateriasContainer"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginBottom="24dp"
			android:visibility="gone" />

		<Button
			android:id="@+id/btnRegister"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="64dp"
			android:text="@string/register_button"
			android:textSize="16sp"
			android:background="@drawable/rounded_button_gray"
			android:textColor="@color/black" />

	</LinearLayout>

</ScrollView>
